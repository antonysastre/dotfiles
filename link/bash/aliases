# cd
alias ..='cd ..'

# ls
alias ls="ls -FG"
alias l="ls -lAhG"
alias ll="ls -GhlF"
alias la='ls -AG'

# git
alias gl='git pull'
alias gp='git push'
alias gd='git diff'
alias gc='git commit'
alias gca='git commit -a'
alias gco='git checkout'
alias gb='git branch'
alias gs='git status'
alias gg='git grep -n'
alias grm="git status | grep deleted | awk '{print \$3}' | xargs git rm"

# rails
alias r='rails'
alias rc='rails console'
alias rs='rails server'
alias rg='rails generate'

alias a='autotest -rails'
alias tlog='tail -f log/development.log'
alias scaffold='script/generate nifty_scaffold'
alias migrate='rake db:migrate db:test:clone'

alias rst='touch tmp/restart.txt'
alias rs='rake spec RAILS_ENV=test'
alias rss='rake spec RAILS_ENV=test; rake cucumber'
alias rp='rake parallel:spec; rake parallel:features'

# commands starting with % for pasting from web
alias %=' '

# changing directory to code project
function p { cd ~/Projects/$1; }

# changing directory to home
function h { cd ~/$1; }

# alternative to "rails" command to use templates
function railsapp {
  appname=$1
  rails $appname -m http://github.com/unders/rails-1-2-3-launcher/raw/master/generate.rb $@
}

# misc
alias reload='. ~/.bash_profile'

# tailing stuff
alias tails="tail -n 400 -f"

# tailing stuff
alias be="bundle exec"
